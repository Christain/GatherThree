<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_white"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:id="@+id/llSina"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="@dimen/detail_share_icon_size"
                android:layout_height="@dimen/detail_share_icon_size"
                android:src="@drawable/act_detail_share_sina_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="新浪微博"
                android:textColor="#FFFF0000"
                android:textSize="@dimen/detail_share_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWeChat"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="@dimen/detail_share_icon_size"
                android:layout_height="@dimen/detail_share_icon_size"
                android:src="@drawable/act_detail_share_wechat_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="微信"
                android:textColor="#FF39B54A"
                android:textSize="@dimen/detail_share_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSquare"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="@dimen/detail_share_icon_size"
                android:layout_height="@dimen/detail_share_icon_size"
                android:src="@drawable/act_detail_share_square_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="朋友圈"
                android:textColor="#FF6C5AF1"
                android:textSize="@dimen/detail_share_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llZoon"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="@dimen/detail_share_icon_size"
                android:layout_height="@dimen/detail_share_icon_size"
                android:src="@drawable/act_detail_share_zoon_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="QQ空间"
                android:textColor="#FFFFC700"
                android:textSize="@dimen/detail_share_text_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#FFC0C0C0" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_user_fragment_item_click_style"
        android:gravity="center"
        android:minHeight="45dp"
        android:text="取消"
        android:textColor="@color/font_orange"
        android:textSize="17sp" />

</LinearLayout>