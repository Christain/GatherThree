<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        android:background="#FFFFFFFF" >

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_item_click_style"
            android:gravity="center"
            android:paddingLeft="@dimen/title_item_padding"
            android:paddingRight="@dimen/title_item_padding"
            android:text="关于我们"
            android:textColor="@drawable/chat_send_text_color"
            android:textSize="@dimen/title_item_text_size" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="集合啦"
            android:textColor="#FFFF9933"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/title_item_click_style"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="城市"
            android:textColor="@drawable/chat_send_text_color"
            android:textSize="@dimen/title_item_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/actionbar_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingLeft="@dimen/home_padding_left_right"
        android:paddingRight="@dimen/home_padding_left_right" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.gather.android.widget.InfiniteLoopViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="140dp" />

            <LinearLayout
                android:id="@+id/slide_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_part_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llPartOne"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.0"
                android:background="@drawable/shape_home_part_one_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_one_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="活动"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/home_part_padding"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/llPartTwo"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/shape_home_part_two_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_two_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="爆料"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_part_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llPartThree"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/shape_home_part_three_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_three_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="热门"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/home_part_padding"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/llPartFour"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/shape_home_part_four_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_four_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="记忆"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/home_part_padding"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/llPartFive"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/shape_home_part_five_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_five_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="签到"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_part_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llPartSix"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/shape_home_part_six_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_six_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="订购"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/home_part_padding"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/llPartSeven"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.0"
                android:background="@drawable/shape_home_part_seven_bg_click_style"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/home_part_icon_size"
                    android:layout_height="@dimen/home_part_icon_size"
                    android:src="@drawable/home_part_seven_icon_click" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="人物"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/home_part_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_part_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_host_high" />
    </LinearLayout>

</LinearLayout>