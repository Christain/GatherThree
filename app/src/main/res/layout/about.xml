                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_about_seven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/about_item_text_icon_between"
                            android:text="软件更新"
                            android:textColor="@color/edit_data_text_hint"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1.0px"
                        android:layout_height="match_parent"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:id="@+id/llNine"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_about_nine" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/about_item_text_icon_between"
                            android:text="官方网站"
                            android:textColor="@color/edit_data_text_hint"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="集合啦  版权所有"
                android:textColor="@color/bg_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:text="Copyright © 2014-2015All right reserver"
                android:textColor="@color/bg_black"
                android:textSize="12sp"
                android:typeface="serif" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>