<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        layout="@layout/actionbar_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edit_data_padding_left_right"
        android:layout_marginRight="@dimen/edit_data_padding_left_right"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_data_bg" >

        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:hint=""
            android:lineSpacingExtra="1.5dp"
            android:minHeight="@dimen/edit_data_item_minHigh"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:textColor="@color/edit_data_text"
            android:textColorHint="@color/edit_data_text_hint"
            android:textSize="@dimen/edit_data_item_text_size"
            android:typeface="serif" />

        <com.gather.android.widget.MaxByteEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:hint=""
            android:lineSpacingExtra="1.5dp"
            android:minHeight="@dimen/edit_data_item_minHigh"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:textColor="@color/edit_data_text"
            android:textColorHint="@color/edit_data_text_hint"
            android:textSize="@dimen/edit_data_item_text_size"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:padding="10dp"
            android:src="@drawable/icon_edit_data_clear" />
    </FrameLayout>

</LinearLayout>