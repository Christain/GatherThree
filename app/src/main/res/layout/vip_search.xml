<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        layout="@layout/actionbar_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="25dp"
        android:background="@color/actionbar_line" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:hint="输入关键字搜索"
        android:minHeight="@dimen/edit_data_item_minHigh"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/edit_data_text"
        android:textColorHint="@color/edit_data_text_hint"
        android:textSize="@dimen/edit_data_item_text_size"
        android:typeface="serif" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/actionbar_line" />

</LinearLayout>