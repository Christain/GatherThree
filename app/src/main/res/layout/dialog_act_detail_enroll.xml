<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_dialog_enroll"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivDismiss"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="top|right"
            android:src="@drawable/icon_act_detail_enroll_dismiss" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="报名"
            android:textColor="@color/font_orange"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="bottom|left"
            android:hint=" 输入您的姓名"
            android:maxLength="4"
            android:paddingBottom="5dp"
            android:textColor="#FF6E7378"
            android:textColorHint="#FF8E949B"
            android:textSize="15sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_stroke"
            android:background="@color/user_fragment_item_line" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#00000000"
            android:gravity="bottom|left"
            android:hint=" 联系电话"
            android:inputType="number"
            android:maxLength="13"
            android:paddingBottom="5dp"
            android:textColor="#FF6E7378"
            android:textColorHint="#FF8E949B"
            android:textSize="15sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_stroke"
            android:background="@color/user_fragment_item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:background="#00000000"
                android:gravity="bottom|left"
                android:paddingBottom="5dp"
                android:text="人数"
                android:textColor="#FF6E7378"
                android:textSize="15sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/ivDel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_act_detail_num_del" />

            <EditText
                android:id="@+id/etUserNum"
                android:layout_width="wrap_content"
                android:maxWidth="70dp"
                android:minWidth="70dp"
                android:layout_height="43dp"
                android:background="#00000000"
                android:gravity="bottom|center_horizontal"
                android:inputType="number"
                android:text="1"
                android:maxLength="3"
                android:paddingBottom="5dp"
                android:textColor="#FF6E7378"
                android:textColorHint="#FF8E949B"
                android:textSize="15sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:src="@drawable/icon_act_detail_num_add" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_stroke"
            android:background="@color/user_fragment_item_line" />

        <TextView
            android:id="@+id/tvEnroll"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_act_detail_enroll_click_style"
            android:gravity="center"
            android:text="提交报名"
            android:textColor="@drawable/text_color_vip_classify_text"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>