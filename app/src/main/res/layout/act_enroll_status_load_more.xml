<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/footer_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height" >

        <ProgressBar
            android:id="@+id/footer_progress"
            android:layout_width="@dimen/footer_height"
            android:layout_height="@dimen/footer_height"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:indeterminateDrawable="@drawable/progress_bg_big"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/footer_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:gravity="center"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/footer_tip_text_size" />

    </RelativeLayout>

</LinearLayout>