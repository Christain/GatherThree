            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_about_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/llOne"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_about_three" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/about_item_text_icon_between"
                            android:text="商户登录"
                            android:textColor="@color/edit_data_text_hint"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1.0px"
                        android:layout_height="match_parent"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:id="@+id/llTwo"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_about_one" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/about_item_text_icon_between"
                            android:text="关于我们"
                            android:textColor="@color/edit_data_text_hint"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1.0px"
                        android:layout_height="match_parent"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:id="@+id/llThree"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_about_two" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/about_item_text_icon_between"
                            android:text="版权声明"
                            android:textColor="@color/edit_data_text_hint"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/llFour"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/about_item_padding_bottom" >

                        <ImageView
                            android:layout_width="@dimen/about_item_icon_size"
                            android:layout_height="@dimen/about_item_icon_size"
