<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        android:background="@drawable/msp_demo_title_bg"
        android:scaleType="center"
        android:src="@drawable/msp_demo_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_marginbottom"
                android:background="@color/user_fragment_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="商品名称"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="商品描述"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvDetail"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="商品描述商品描述商品描述商品描述商品描述商品描述商品描述"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="收款方"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="成都零创科技有限公司"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="付款方式"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="支付宝快捷支付"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="订单编号"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="1233456655"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size"
                        android:typeface="serif" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="left|center_vertical"
                        android:text="支付金额"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="right|center_vertical"
                        android:text="50"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/user_item_text_size"
                        android:typeface="serif" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/shape_pay_click_style"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认支付"
                    android:textColor="@color/font_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_marginbottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>