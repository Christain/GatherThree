<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        layout="@layout/actionbar_title" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_item_high"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:text="基本资料"
                android:textColor="@color/font_app"
                android:textSize="@dimen/user_item_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/user_fragment_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llNickName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="真实姓名"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <EditText
                        android:id="@+id/etUserName"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="联系电话"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <EditText
                        android:id="@+id/etUserPhone"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:gravity="center_vertical|right"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="常用邮箱"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <EditText
                        android:id="@+id/etUserEmail"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:gravity="center_vertical|right"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_item_high"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:text="常出没城市"
                android:textColor="@color/font_app"
                android:textSize="@dimen/user_item_text_size" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_white"
                android:minHeight="60dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:paddingRight="80dp"
                android:paddingTop="10dp" >

                <com.gather.android.widget.NoScrollGridView
                    android:id="@+id/cityGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:fadingEdge="none"
                    android:horizontalSpacing="15.0dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:scrollingCache="true"
                    android:verticalSpacing="15.0dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="1.5dp"
                android:text="选择3个您常出没的城市\n将在所属城市达人列表展示出来"
                android:textColor="@color/font_app"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_item_high"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:text="类别标签"
                    android:textColor="@color/font_app"
                    android:textSize="@dimen/user_item_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="最多选择两个类别标签"
                    android:textColor="@color/font_app"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_white"
                android:minHeight="70dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:paddingRight="80dp"
                android:paddingTop="10dp" >

                <com.gather.android.widget.NoScrollGridView
                    android:id="@+id/actGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:fadingEdge="none"
                    android:horizontalSpacing="15.0dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:scrollingCache="true"
                    android:verticalSpacing="15.0dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_item_high"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:text="个性标签"
                    android:textColor="@color/font_app"
                    android:textSize="@dimen/user_item_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="最多选择两个个性标签"
                    android:textColor="@color/font_app"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_white"
                android:minHeight="70dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:paddingRight="80dp"
                android:paddingTop="10dp" >

                <com.gather.android.widget.NoScrollGridView
                    android:id="@+id/userGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:fadingEdge="none"
                    android:horizontalSpacing="15.0dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:scrollingCache="true"
                    android:verticalSpacing="15.0dp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_item_high"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:text="申请理由"
                android:textColor="@color/font_app"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/user_fragment_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />

                <EditText
                    android:id="@+id/etUserBrief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="#00000000"
                    android:gravity="top|left"
                    android:hint="不超过100字"
                    android:lineSpacingExtra="1.5dp"
                    android:maxHeight="250dp"
                    android:maxLength="100"
                    android:minHeight="100dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/edit_data_text"
                    android:textSize="@dimen/user_item_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_item_high"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/user_item_padding_left_right"
                android:text="照片认证"
                android:textColor="@color/font_app"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/publish_trends_gridview_margin"
                android:layout_marginRight="@dimen/publish_trends_gridview_margin"
                android:layout_marginBottom="30dp"
                android:orientation="vertical" >

                <com.gather.android.widget.NoScrollGridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:horizontalSpacing="@dimen/publish_trends_gridview_padding"
                    android:listSelector="@null"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:scrollingCache="true"
                    android:verticalSpacing="@dimen/publish_trends_gridview_padding" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>