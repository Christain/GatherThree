<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg_click_gray_style"
        android:orientation="vertical"
        android:paddingLeft="@dimen/friends_list_item_padding_left_right"
        android:paddingRight="@dimen/friends_list_item_padding_left_right"
        android:paddingTop="@dimen/friends_list_item_padding_top_bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivUserIcon"
                android:layout_width="@dimen/friends_list_item_icon_size"
                android:layout_height="@dimen/friends_list_item_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/default_user_icon" />

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/friends_list_item_padding_left_right"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集合啦集合啦"
                        android:textColor="@color/friends_list_name_text"
                        android:textSize="@dimen/friends_list_item_name_size" />

                    <ImageView
                        android:id="@+id/ivUserSex"
                        android:layout_width="@dimen/friends_list_item_sex_size"
                        android:layout_height="@dimen/friends_list_item_sex_size"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/icon_user_list_sex_male" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUserBrief"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dp"
                    android:layout_marginTop="@dimen/friends_list_item_between"
                    android:layout_weight="1.0"
                    android:lineSpacingExtra="1.0dp"
                    android:maxLines="3"
                    android:text="个性签名个性签名个"
                    android:textColor="#FF6E7378"
                    android:textSize="@dimen/friends_list_item_breif_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivVip"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="top|right"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_vip" />

                <View
                    android:layout_width="1.0dp"
                    android:layout_height="0.0dp"
                    android:layout_weight="1.0" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp" >

                    <TextView
                        android:id="@+id/tvFocus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_apply_to_vip_bg"
                        android:minWidth="45dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="4dp"
                        android:text="关注"
                        android:gravity="center"
                        android:textColor="@drawable/apply_vip_text_click_style"
                        android:textSize="@dimen/friends_list_item_focus_size" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_stroke"
            android:layout_marginTop="@dimen/friends_list_item_padding_top_bottom"
            android:background="@color/user_fragment_item_line" />
    </LinearLayout>

</LinearLayout>