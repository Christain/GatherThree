<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/friends_list_item_padding_left_right"
        android:paddingRight="@dimen/friends_list_item_padding_left_right"
        android:paddingTop="@dimen/friends_list_item_padding_top_bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivUserIcon"
                android:layout_width="@dimen/friends_list_item_icon_size"
                android:layout_height="@dimen/friends_list_item_icon_size"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/default_user_icon" />

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/friends_list_item_padding_left_right"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集合啦集合啦"
                        android:textColor="@color/friends_list_name_text"
                        android:textSize="@dimen/friends_list_item_name_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dp"
                    android:layout_marginTop="@dimen/friends_list_item_between"
                    android:layout_weight="1.0"
                    android:text="个性签名个性签名个名个名个名个名个名个名个名个名个"
                    android:textColor="#FF6E7378"
                    android:textSize="@dimen/message_content_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0.0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1.0" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10分钟前"
                        android:textColor="#FF6E7378"
                        android:textSize="@dimen/message_time_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_stroke"
            android:layout_marginTop="@dimen/friends_list_item_padding_top_bottom"
            android:background="@color/user_fragment_item_line" />
    </LinearLayout>

</LinearLayout>