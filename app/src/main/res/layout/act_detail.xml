<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        android:layout_gravity="top"
        android:background="@color/font_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/actionbar_high"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/title_item_click_style"
                android:padding="@dimen/title_item_padding"
                android:src="@drawable/icon_title_arrow_yellow" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#FFFF9933"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/ivActLove"
                android:layout_width="@dimen/actionbar_high"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="11dp"
                android:src="@drawable/icon_act_title_love_press"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/titleLine"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/user_fragment_item_line" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/llError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_app"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/ivErrorImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="15dp"
                android:src="@drawable/no_result" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点击重新加载"
                android:textColor="#FF333333"
                android:textSize="16sp" />
        </LinearLayout>

        <com.gather.android.widget.UserCenterScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.gather.android.widget.InfiniteLoopViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <ImageView
                        android:id="@+id/ivOnePic"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop" />

                    <ProgressBar
                        android:id="@+id/progressOnePic"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape_progress_bar_background"
                        android:indeterminate="false"
                        android:max="100"
                        android:padding="3dp"
                        android:progress="2"
                        android:progressDrawable="@drawable/shape_progressbar_style"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/slide_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/font_white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/act_detail_item_min_high"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/act_detail_text_padding_left" >

                    <TextView
                        android:id="@+id/tvActMark"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:singleLine="true"
                        android:text="旅行"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/act_detail_title_text_size" />

                    <TextView
                        android:id="@+id/tvActCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="免费"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/act_detail_title_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:background="@color/user_fragment_item_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/font_white"
                    android:gravity="center_vertical"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/act_detail_text_padding_left" >

                    <LinearLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvAddressDetail"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="环球中心"
                            android:textColor="#FF6E7378"
                            android:textSize="@dimen/act_detail_title_text_size" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:maxLines="2"
                            android:layout_marginRight="15dp"
                            android:text="成都市，高新区，天府大道"
                            android:textColor="#FF8E949B"
                            android:textSize="@dimen/act_detail_content_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="2.0px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="18dp"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:id="@+id/llAddress"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_user_fragment_item_click_style"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/act_detail_location_map_click" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="地图导航"
                            android:textColor="@color/font_orange"
                            android:textSize="@dimen/act_detail_content_text_size" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:background="@color/user_fragment_item_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/font_white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                    android:paddingTop="@dimen/act_detail_item_padding_top" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/act_detail_lable_padding_left" >

                        <View
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0.5dp"
                            android:background="@color/font_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="活动详情"
                            android:textColor="#6E7378"
                            android:textSize="@dimen/act_detail_title_text_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvActDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="3dp"
                        android:paddingLeft="@dimen/act_detail_text_padding_left"
                        android:paddingRight="@dimen/act_detail_text_padding_left"
                        android:text="活动详情内容活动详情内容活动详情内容活动详情内容活动详情内容"
                        android:textColor="#8e949b"
                        android:textSize="@dimen/act_detail_content_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llActStrategy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                        android:paddingTop="@dimen/act_detail_item_padding_top" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/font_white"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="0.5dp"
                                android:background="@color/font_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="攻略"
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_title_text_size" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvActStrategy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="1.5dp"
                            android:paddingLeft="@dimen/act_detail_text_padding_left"
                            android:paddingRight="@dimen/act_detail_text_padding_left"
                            android:text="攻略秘籍攻略秘籍攻略秘籍攻略秘籍攻略秘籍"
                            android:textColor="@color/font_orange"
                            android:textSize="@dimen/act_detail_content_click_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llActMemory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                        android:paddingTop="@dimen/act_detail_item_padding_top" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/font_white"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="0.5dp"
                                android:background="@color/font_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="活动回顾"
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_title_text_size" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvActMemory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="1.5dp"
                            android:paddingLeft="@dimen/act_detail_text_padding_left"
                            android:paddingRight="@dimen/act_detail_text_padding_left"
                            android:text="回顾内容回顾内容"
                            android:textColor="@color/font_orange"
                            android:textSize="@dimen/act_detail_content_click_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llActVip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                        android:paddingTop="@dimen/act_detail_item_padding_top" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/font_white"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="0.5dp"
                                android:background="@color/font_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="达人推荐"
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_title_text_size" />
                        </LinearLayout>

                        <com.gather.android.widget.NoScrollGridView
                            android:id="@+id/vipGridView"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:background="#00000000"
                            android:fadingEdge="none"
                            android:horizontalSpacing="@dimen/act_detail_item_gridview_padding"
                            android:listSelector="#00000000"
                            android:numColumns="4"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left"
                            android:paddingRight="@dimen/act_detail_lable_padding_left" >
                        </com.gather.android.widget.NoScrollGridView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llActBus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                        android:paddingTop="@dimen/act_detail_item_padding_top" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/font_white"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="0.5dp"
                                android:background="@color/font_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="交通信息"
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_title_text_size" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvActBus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="1.5dp"
                            android:paddingLeft="@dimen/act_detail_text_padding_left"
                            android:paddingRight="@dimen/act_detail_text_padding_left"
                            android:text="坐20路到达活动地址"
                            android:textColor="#8e949b"
                            android:textSize="@dimen/act_detail_content_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llActComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/act_detail_item_verticalSpacing"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:background="@color/user_fragment_item_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/font_white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/font_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left"
                            android:paddingRight="10dp" >

                            <View
                                android:layout_width="3dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="0.5dp"
                                android:background="@color/font_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="评论 "
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_title_text_size" />

                            <TextView
                                android:id="@+id/tvActCommentNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="7dp"
                                android:gravity="center_vertical"
                                android:text="20条"
                                android:textColor="#6E7378"
                                android:textSize="@dimen/act_detail_content_text_size" />

                            <View
                                android:layout_width="0.0dp"
                                android:layout_height="1.0dp"
                                android:layout_weight="1.0" />

                            <TextView
                                android:id="@+id/tvActCommentAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="查看全部"
                                android:textColor="@color/font_orange"
                                android:textSize="@dimen/act_detail_content_text_size" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.0px"
                            android:layout_marginLeft="@dimen/act_detail_lable_padding_left"
                            android:layout_marginRight="10dp"
                            android:background="@color/user_fragment_item_line" />

                        <LinearLayout
                            android:id="@+id/llActCommentItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_user_fragment_item_click_style"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/act_detail_item_padding_bottom"
                            android:paddingLeft="@dimen/act_detail_lable_padding_left"
                            android:paddingTop="@dimen/act_detail_item_padding_bottom" >

                            <ImageView
                                android:id="@+id/ivUserIcon"
                                android:layout_width="@dimen/act_detail_item_user_icon_size"
                                android:layout_height="@dimen/act_detail_item_user_icon_size"
                                android:scaleType="fitXY"
                                android:src="@drawable/default_user_icon" />

                            <LinearLayout
                                android:layout_width="0.0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.0"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="集合啦集合啦"
                                    android:textColor="#FF6E7378"
                                    android:textSize="@dimen/act_detail_item_user_text_size" />

                                <TextView
                                    android:id="@+id/tvUserComment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="评论内容"
