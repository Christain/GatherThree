<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <include
        layout="@layout/actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"/>


    <Button
        android:visibility="gone"
        android:id="@+id/unifiedorder_btn"
        style="@style/MMLineActionButton"
        android:layout_margin="10dp"
        android:background="@color/font_orange"
        android:text="APP支付生成预支付订单"/>


    <Button
        android:visibility="gone"
        android:id="@+id/appay_pre_btn"
        style="@style/MMLineActionButton"
        android:layout_margin="10dp"
        android:background="@color/font_orange"
        android:text="生成APP微信支付参数"/>

    <Button
        android:id="@+id/appay_btn"
        style="@style/MMLineActionButton"
        android:layout_margin="10dp"
        android:background="@color/font_orange"
        android:text="调起微信支付"/>


    <TextView
        android:id="@+id/editText_prepay_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </TextView>

</LinearLayout>