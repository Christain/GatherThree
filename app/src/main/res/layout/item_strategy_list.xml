<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/strategy_item_margin_left_right"
        android:layout_marginRight="@dimen/strategy_item_margin_left_right"
        android:background="@drawable/shape_strategy_item_bg_click_style"
        android:orientation="vertical"
        android:paddingBottom="@dimen/strategy_item_padding_top_bottom"
        android:paddingLeft="@dimen/strategy_item_padding_left_right"
        android:paddingRight="@dimen/strategy_item_padding_left_right"
        android:paddingTop="@dimen/strategy_item_padding_top_bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集合啦集合啦"
                    android:textColor="@color/friends_list_name_text"
                    android:textSize="@dimen/friends_list_item_name_size" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:text="10分钟前"
                    android:textColor="#FF8E949B"
                    android:textSize="@dimen/message_time_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="¥300"
                android:textColor="@color/font_orange"
                android:textSize="@dimen/strategy_item_cost_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/strategy_item_between"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_login_index" />

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_marginTop="@dimen/strategy_item_between"
            android:layout_weight="1.0"
            android:lineSpacingExtra="1.5dp"
            android:maxLines="3"
            android:text="系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息"
            android:textColor="#FF8E949B"
            android:textSize="@dimen/strategy_item_intro_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/strategy_item_margin_bottom" />

</LinearLayout>