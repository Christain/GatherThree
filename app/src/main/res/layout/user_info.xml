<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high"
        layout="@layout/actionbar_title" />

    <com.gather.android.widget.OverScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actionbar_marginbottom"
                android:background="@color/user_fragment_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="4dp" >

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="left|center_vertical"
                        android:text="头像"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <ImageView
                        android:id="@+id/ivUserIcon"
                        android:layout_width="@dimen/user_info_user_icon_size"
                        android:layout_height="@dimen/user_info_user_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/default_user_icon" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llNickName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="left|center_vertical"
                        android:text="昵称"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:gravity="center_vertical"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserSex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="left|center_vertical"
                        android:text="性别"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserSex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:gravity="center_vertical"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="left|center_vertical"
                        android:text="年龄"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:gravity="center_vertical"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size"
                        android:typeface="serif" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserInterest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="爱好"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserInterest"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:lineSpacingExtra="1.5dp"
                        android:maxLines="5"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserBrief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="个性签名"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserBrief"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:lineSpacingExtra="1.5dp"
                        android:maxLines="5"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/user_fragment_item_bg"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_high"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="联系电话"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserPhone"
                        android:layout_width="0.0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size"
                        android:typeface="serif" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:layout_marginLeft="@dimen/user_item_padding_left_right"
                    android:layout_marginRight="@dimen/user_item_padding_left_right"
                    android:background="@color/user_fragment_item_line" />

                <LinearLayout
                    android:id="@+id/llUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_user_fragment_item_click_style"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/user_item_high"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="@dimen/user_item_padding_left_right"
                    android:paddingRight="@dimen/user_item_padding_left_right"
                    android:paddingTop="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="通讯地址"
                        android:textColor="@color/user_fragment_item_text"
                        android:textSize="@dimen/user_item_text_size" />

                    <TextView
                        android:id="@+id/tvUserAddress"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/user_info_item_text_arrow_padding"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:lineSpacingExtra="1.5dp"
                        android:maxLines="3"
                        android:textColor="@color/user_info_item_text"
                        android:textSize="@dimen/user_item_text_small_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_stroke"
                    android:background="@color/user_fragment_item_line" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </com.gather.android.widget.OverScrollView>

</LinearLayout>