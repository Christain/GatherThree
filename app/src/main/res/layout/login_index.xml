<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_login_index"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" >

            <ImageView
                android:layout_width="@dimen/login_logo_icon_size"
                android:layout_height="@dimen/login_logo_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/icon_login_index_jihe"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivFinish"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|left"
                android:layout_margin="5dp"
                android:background="@drawable/icon_login_finish" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/login_padding_left_right"
            android:paddingRight="@dimen/login_padding_left_right" >

            <ImageView
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/shape_login_phone_click_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_icon_text_distance"
                android:text="手机"
                android:textColor="@color/font_white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/login_padding_left_right"
            android:paddingRight="@dimen/login_padding_left_right" >

            <ImageView
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/shape_login_wechat_click_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_icon_text_distance"
                android:text="微信"
                android:textColor="@color/font_white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/login_padding_left_right"
            android:paddingRight="@dimen/login_padding_left_right" >

            <ImageView
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/shape_login_sina_click_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_icon_text_distance"
                android:text="微博"
                android:textColor="@color/font_white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTencent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/login_padding_left_right"
            android:paddingRight="@dimen/login_padding_left_right" >

            <ImageView
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/shape_login_tencent_click_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_icon_text_distance"
                android:text="QQ"
                android:textColor="@color/font_white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="选择登录方式"
            android:textColor="@color/font_white"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>