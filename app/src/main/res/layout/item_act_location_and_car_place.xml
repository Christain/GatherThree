<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llItemAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/act_location_and_car_place_item_padding"
        android:paddingRight="@dimen/act_location_and_car_place_item_padding"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/shape_white_bg_click_gray_style"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLcationCar"
            android:textSize="17sp"
            android:textColor="#FF666666"
            android:text="活动地点"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/icon_act_location_car_place_location_map"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvActLcation"
                android:textSize="14sp"
                android:textColor="#FF8F949A"
                android:text="活动地点"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivPic"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_image"
            android:scaleType="centerCrop"/>

        </LinearLayout>



</LinearLayout>